{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/sessions/(.*)",
      "dest": "/api/sessions.ts"
    },
    {
      "src": "/api/answers",
      "dest": "/api/answers.ts"
    },
    {
      "src": "/api/generate",
      "dest": "/api/generate.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
