{
  "buildCommand": "npm run build && cd frontend && npm install && REACT_APP_API_URL=/api npm run build && cp -r build/* ../public/",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/save-exchange-rate",
      "schedule": "0 23 28-31 * *"
    }
  ]
}
