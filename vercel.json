{
  "buildCommand": "npm run build && cd frontend && npm install && REACT_APP_API_URL=/api npm run build && cp -r build/* ../public/ && cp -r build/.well-known ../public/ 2>/dev/null || true && cd .. && node scripts/generate-app-index.js",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.kanjiname.jp"
        }
      ],
      "destination": "https://kanjiname.jp/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/.well-known/:path*",
      "destination": "/.well-known/:path*"
    },
    {
      "source": "/((?!api/|\\.well-known/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/save-exchange-rate",
      "schedule": "0 23 28-31 * *"
    }
  ]
}
